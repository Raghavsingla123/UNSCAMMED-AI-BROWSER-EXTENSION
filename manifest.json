{
  "manifest_version": 3,
  "name": "UNSCAMMED.AI",
  "version": "1.0.0",
  "description": "Browser Shield - Real-time phishing detection and website security analysis",
  
  "permissions": [
    "tabs",
    "activeTab", 
    "webNavigation",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/advancedHtmlAnalyzer.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "UNSCAMMED.AI - Browser Shield"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["utils/*"],
      "matches": ["<all_urls>"]
    }
  ]
}