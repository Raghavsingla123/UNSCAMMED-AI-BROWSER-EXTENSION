# UNSCAMMED AI - Dual Project Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# PROJECT A: Hash Database (Update API)
# ============================================
# Uses: threatLists.computeDiff, hashes.search
# Billing: FREE (computeDiff) + $50/1000 (hashes.search - rarely used)
PROJECT_A_SERVICE_ACCOUNT_PATH=./secrets/project-a-service-account.json
PROJECT_A_PROJECT_ID=your-project-a-id-here

# ============================================
# PROJECT B: URL Lookup (Lookup API)
# ============================================
# Uses: uris:search ONLY
# Billing: FREE tier (10,000 queries/month)
PROJECT_B_API_KEY=AIzaSy...your-api-key-here
PROJECT_B_PROJECT_ID=your-project-b-id-here

# ============================================
# Feature Flags
# ============================================
USE_DUAL_PROJECT_MODE=true
ENABLE_LOCAL_HASH_DB=true
ENABLE_API_GUARD=true

# ============================================
# Monitoring & Alerts
# ============================================
COST_ALERT_THRESHOLD_USD=10
MONTHLY_SCAN_LIMIT=9000
LOG_ALL_API_CALLS=true

# ============================================
# Performance
# ============================================
HASH_DB_UPDATE_INTERVAL_HOURS=1
API_TIMEOUT_MS=10000
PORT=3000
